#:kivy 2.2.1
<ShortInfo>:
    id: short_info
    display: data
    cols: 1
    padding: 10
    spacing: 5
    row_default_height: 40
    height: self.minimum_height
    row_force_default: True

    canvas:
        Rectangle:
            source: 'assets/background.jpg'
            size: self.size
            pos: self.pos
    BoxLayout:
        Label:
            text: 'Укажите путь'
            color: (1, 1, 1, .8)
            font_size: 40
            valign: 'middle'
        TextInput:
            id: data
            font_size: 15
            multiline: False 
    BoxLayout:
        Button:
            text: 'Сгенерировать'

